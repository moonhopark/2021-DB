<h1>{{title}}</h1>

<table>
  <tr>
    <td>Dname</td>
    <td>Dnumber</td>
    <td>Mgr_ssn</td>
    <td>Mgr_start_date</td>
  </tr>
  {{#each dept_res}}
    <form method='post' action='/update/department'>
      <tr>
        {{! input tag를 사용하여 변경 가능하게 함 }}
        <td><input type='text' name='dname' placeholder={{Dname}} /></td>
        <td>{{Dnumber}}</td>
        <td>{{Mgr_ssn}}</td>
        <td>{{Mgr_start_date}}</td>
        {{! formaction 속성을 활용하여 입력한 값을 넘겨줌 }}
        <td><input type='submit' value='수정' formaction='/update/department' /></td>
      </tr>
    </form>
  {{/each}}
</table>